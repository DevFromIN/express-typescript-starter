{
  "compilerOptions": {
    "alwaysStrict": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "lib": ["esnext"],
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noEmitOnError": true,
    "outDir": "build",
    "paths": {
      "~/*": ["./src/*"]
    },
    "removeComments": true,
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "include": [".eslintrc.js", "src/**/*.ts"],
  "exclude": ["node_modules"]
}
